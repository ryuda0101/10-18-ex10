<!-- 로그인 데이터가 없다면 접근 불가하게 설정 -->
<% if(!userData){ %>
    <script>
        alert("비회원은 접근할수 없는 페이지 입니다.")
        location.href = "/login";
    </script>
<% } %>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>상세페이지</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include("common/header.ejs") %>
    <div id="brdDetail_container">
        <div class="brd_center">
            <div class="brdList_top">
                <div class="brd_number"><%- brdData.brdid %></div>
                <div class="brd_title"><%- brdData.brdtitle %></div>
            </div>
            <div class="brd_context"><%- brdData.brdcontext %></div>
            <div class="brd_auther"><%- brdData.brdauther %></div>
        </div>

        <div class="brdDetail_btns">
            <!-- 
                server.js에서 넘겨준 userData에 있는 nick과 db에서 가져온 brdData에 있는 nick과 일치한다면
                수정, 삭제버튼이 보인다.
            -->
            <% if(userData.joinnick === brdData.brdauther) { %>
                <a href="/brdupt/<%- brdData.brdid %>">수정</a>
                <a class="deleteBtn" href="/delete/<%- brdData.brdid %>">삭제</a>
            <% } %>
            <a href="/brdlist">목록</a>
        </div>
    </div>
    <script src="js/detail.js"></script>
</body>
</html>